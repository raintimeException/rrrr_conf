syntax on
set number relativenumber
set scrolloff=999
set tabstop=8
set shiftwidth=8
set autoindent
set expandtab
set ruler
set list
set lcs=tab:>-,space:·,trail:~,extends:>,precedes:<,nbsp:␣
set ignorecase smartcase
set clipboard+=unnamedplus
cnoreabbrev t term
cnoreabbrev ex Ex
colorscheme default
set colorcolumn=80
set bg=dark
